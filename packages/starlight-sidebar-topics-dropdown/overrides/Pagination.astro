---
import Default from '@astrojs/starlight/components/Pagination.astro'

import { isTopicFirstPage, isTopicLastPage } from '../lib/sidebar'

const { id, pagination, sidebar } = Astro.locals.starlightRoute;
let { prev, next } = pagination

if (isTopicFirstPage(sidebar, id)) {
  prev = undefined
}

if (isTopicLastPage(sidebar, id)) {
  next = undefined
}
---

<Default pagination={{ prev, next }}><slot /></Default>
